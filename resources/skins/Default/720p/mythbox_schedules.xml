<window>
  <id>3005</id>
  <defaultcontrol>600</defaultcontrol>
  <type>window</type>
  <coordinates>
    <system>1</system>
    <posx>0</posx>
    <posy>0</posy>
  </coordinates>

<!--<colors>-->
<!--    <color name="white">FFFFFFFF</color>-->
<!--    <color name="grey">66FFFFFF</color>-->
