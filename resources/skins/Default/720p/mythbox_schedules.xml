  <controls>

    <!-- ============================================= -->
    <!--   S C R E E N       B A C K G R O U N D       -->          
    <!-- ============================================= -->              
  
    <!-- Copy of CommonBackground -->
    <control type="image">
      <description>background image</description>
      <posx>0</posx>
      <posy>0</posy>
      <width>1280</width>
      <height>720</height>
      <texture>bg.png</texture>
    </control>

    <control type="group">
        <description>Content Group</description>
        <!-- Copy Window_OpenClose_Right_Panel_Animation -->
        <animation effect="fade" time="200" condition="Skin.HasSetting(Animate_Skin)">WindowOpen</animation>
        <animation effect="fade" time="200" condition="Skin.HasSetting(Animate_Skin)">WindowClose</animation>
        <animation effect="slide" start="1030,0" end="0,0" time="300" tween="quadratic" easing="out" condition="!Skin.HasSetting(Animate_Skin)">WindowOpen</animation>
        <animation effect="slide" end="1030,0" start="0,0" time="300" tween="quadratic" easing="out" condition="!Skin.HasSetting(Animate_Skin)">WindowClose</animation>

        <!-- ============================================= -->
        <!--   C O N T E N T     B A C K G R O U N D       -->          
        <!-- ============================================= -->              
      
        <!-- Copy of ContentPanel -->
        <control type="image">
            <posx>265</posx>
            <posy>100</posy>
            <width>1015</width>
            <height>580</height>
            <texture border="50,0,0,45">vpanel1.png</texture>
        </control>
        
        <!-- ============================================= -->
        <!-- Recording Schedules Table Header              -->          
        <!-- ============================================= -->              
        <control type="image">
            <description>table header</description>
            <posx>315</posx>
            <posy>180</posy>
            <width>900</width>
            <height>40</height>
            <texture flipx="true">header.png</texture>
        </control>

        <control type="label">
            <posx>325</posx>
            <posy>140</posy>
            <width>340</width>
            <height>35</height>
            <font>font12</font>
            <textcolor>ffddddff</textcolor>
            <selectedcolor>FFe2ff43</selectedcolor>
            <align>left</align>
            <aligny>center</aligny>
            <label>[B]Title[/B]</label>
        </control>

        <control type="label">
            <posx>690</posx>
            <posy>140</posy>
            <width>150</width>
            <height>35</height>
            <font>font12</font>
            <textcolor>ffddddff</textcolor>
            <selectedcolor>FFe2ff43</selectedcolor>
            <align>left</align>
            <aligny>center</aligny>
            <label>[B]Type[/B]</label>
        </control>

        <control type="label">
            <posx>825</posx>
            <posy>140</posy>
            <width>100</width>
            <height>35</height>
            <font>font12</font>
            <textcolor>ffddddff</textcolor>
            <selectedcolor>FFe2ff43</selectedcolor>
            <align>left</align>
            <aligny>center</aligny>
            <label>[B]Priority[/B]</label>
        </control>

        <control type="label">
            <posx>965</posx>
            <posy>140</posy>
            <width>200</width>
            <height>35</height>
            <font>font12</font>
            <textcolor>ffddddff</textcolor>
            <selectedcolor>FFe2ff43</selectedcolor>
            <align>left</align>
            <aligny>center</aligny>
            <label>[B]Channel[/B]</label>
        </control>

        <!-- ============================================= -->
        <!-- Recording Schedules Table                     -->          
        <!-- ============================================= -->              
        <control type="list" id="600">
            <posx>315</posx>
            <posy>180</posy>
            <width>900</width>
            <height>460</height>
            <onleft>2000</onleft>
            <onright>6000</onright>
            <onup>600</onup>
            <ondown>600</ondown>
            <viewtype label="Schedules">wide</viewtype>
            <pagecontrol>6000</pagecontrol>
            <scrolltime>0</scrolltime>
            <preloaditems>10</preloaditems>

            <itemlayout height="30">

                <control type="label">
                    <posx>10</posx>
                    <posy>0</posy>
                    <width>340</width>
                    <height>30</height>
                    <font>font12</font>
                    <textcolor>FFFFFFFF</textcolor>
                    <selectedcolor>FFe2ff43</selectedcolor>
                    <align>left</align>
                    <aligny>center</aligny>
                    <label>$INFO[ListItem.Property(title)]</label>
                </control>

                <control type="label">
                    <posx>375</posx>
                    <posy>0</posy>
                    <width>150</width>
                    <height>30</height>
                    <font>font12</font>
                    <textcolor>DDFFFFFF</textcolor>
                    <selectedcolor>FFe2ff43</selectedcolor>
                    <align>left</align>
                    <aligny>center</aligny>
                    <label>$INFO[ListItem.Property(scheduleType)]</label>
                </control>
                
                <control type="label">
                    <posx>550</posx>
                    <posy>0</posy>
                    <width>100</width>
                    <height>30</height>
                    <font>font12</font>
                    <textcolor>FFFFFFFF</textcolor>
                    <selectedcolor>FFe2ff43</selectedcolor>
                    <align>center</align>
                    <aligny>center</aligny>
                    <label>$INFO[ListItem.Property(priority)]</label>
                </control>

                <control type="label">
                    <posx>650</posx>
                    <posy>0</posy>
                    <width>250</width>
                    <height>30</height>
                    <font>font12</font>
                    <textcolor>FFFFFFFF</textcolor>
                    <selectedcolor>FFe2ff43</selectedcolor>
                    <align>left</align>
                    <aligny>center</aligny>
                    <label>$INFO[ListItem.Property(channelName)]</label>
                </control>
            </itemlayout>
            
            <focusedlayout height="30">
            
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>900</width>
                    <height>30</height>
                    <texture border="3">input-focus.png</texture>
                    <visible>Control.HasFocus(600)</visible>
                </control>
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>900</width>
                    <height>30</height>
                    <texture border="3">input-nofocus.png</texture>
                    <visible>!Control.HasFocus(600)</visible>
                </control>
            
                <control type="label">
                    <posx>10</posx>
                    <posy>0</posy>
                    <width>340</width>
                    <height>30</height>
                    <font>font12</font>
                    <textcolor>FFFFFFFF</textcolor>
                    <selectedcolor>FFe2ff43</selectedcolor>
                    <align>left</align>
                    <aligny>center</aligny>
                    <label>$INFO[ListItem.Property(title)]</label>
                </control>

                <control type="label">
                    <posx>375</posx>
                    <posy>0</posy>
                    <width>150</width>
                    <height>30</height>
                    <font>font12</font>
                    <textcolor>DDFFFFFF</textcolor>
                    <selectedcolor>FFe2ff43</selectedcolor>
                    <align>left</align>
                    <aligny>center</aligny>
                    <label>$INFO[ListItem.Property(scheduleType)]</label>
                </control>
                
                <control type="label">
                    <posx>550</posx>
                    <posy>0</posy>
                    <width>100</width>
                    <height>30</height>
                    <font>font12</font>
                    <textcolor>FFFFFFFF</textcolor>
                    <selectedcolor>FFe2ff43</selectedcolor>
                    <align>center</align>
                    <aligny>center</aligny>
                    <label>$INFO[ListItem.Property(priority)]</label>
                </control>

                <control type="label">
                    <posx>650</posx>
                    <posy>0</posy>
                    <width>250</width>
                    <height>30</height>
                    <font>font12</font>
                    <textcolor>FFFFFFFF</textcolor>
                    <selectedcolor>FFe2ff43</selectedcolor>
                    <align>left</align>
                    <aligny>center</aligny>
                    <label>$INFO[ListItem.Property(channelName)]</label>
                </control>

            </focusedlayout>
        </control>
        
        <!-- 
        <control type="scrollbar" id="6000">
            <description>Scroll Bar</description>
            <posx>1215</posx>
            <posy>140</posy>
            <width>16</width>
            <height>468</height>
            <texturesliderbackground border="2,2,2,2">scrollbar_bar_back2.png</texturesliderbackground> 
            <texturesliderbar border="2,16,2,16">scrollbar_bar.png</texturesliderbar> 
            <texturesliderbarfocus border="2,16,2,16">scrollbar_bar_focus.png</texturesliderbarfocus> 
            <textureslidernib>scrollbar_nib.png</textureslidernib> 
